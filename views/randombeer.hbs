{{#each beer}}

<div class="bear">
    <img id = "randomimg" src="{{this.image_url}}"></img>
    <div>    
        <h3>{{this.name}}</h3>
        <p id = "myname">{{this.tagline}}</p>
        <p>{{this.description}}</p>
        
        <h3>Food pairing</h3>
        <ul>
            {{#each this.food_pairing}}
                    <li>{{this}}</li>
            {{/each}}
        </ul>
        <p><span>Brewers Tips: </span>{{this.brewers_tips}}</p>
    </div>
</div>

{{/each}}